{
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "start-js": "webpack-dev-server --mode development --config webpack.dev.js --open",
    "build-js": "webpack --mode production --config webpack.prod.js",
    "start": "npm-run-all -p watch-css start-js",
    "build": "rm -rf dist/ && npm-run-all build-css build-js",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist -b master"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.4",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "@types/react-sticky": "^6.0.2",
    "awesome-typescript-loader": "^5.2.0",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^1.0.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "node-sass-chokidar": "^1.3.0",
    "npm-run-all": "^4.1.3",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.21.0",
    "typescript": "^2.9.2",
    "typings-for-css-modules-loader": "^1.7.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.16.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.3"
  },
  "dependencies": {
    "@types/d3-interpolate": "^1.2.0",
    "classnames": "^2.2.6",
    "d3-interpolate": "^1.2.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-gif-player": "^0.4.1",
    "react-scrollable-anchor": "^0.6.1",
    "react-sticky": "^6.0.3",
    "react-typist": "^2.0.4",
    "react-waypoint": "^8.0.3"
  }
}
